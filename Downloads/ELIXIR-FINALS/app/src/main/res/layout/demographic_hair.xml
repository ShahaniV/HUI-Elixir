<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".DemographicHair">

    <!-- Header layout -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="431dp"
        android:layout_height="52dp"
        android:background="@drawable/bottom_shadow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/circle_logo" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="ELIXIR"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="322dp"
        android:layout_height="64dp"
        android:text="Please select your natural hair color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/light_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <Button
        android:id="@+id/light_brown"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="276dp"
        android:layout_height="117dp"
        android:background="@color/light_brown"
        android:text="Light Brown"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorLink="#FFFFFF"
        app:backgroundTint="@color/light_brown"
        app:layout_constraintBottom_toTopOf="@+id/medium_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#000000"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/dark_brown"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="276dp"
        android:layout_height="117dp"
        android:background="@color/dark_brown"
        android:text="Dark Brown"
        android:textAllCaps="false"
        app:backgroundTint="@color/dark_brown"
        app:layout_constraintBottom_toTopOf="@+id/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/black"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="276dp"
        android:layout_height="117dp"
        android:background="@color/black"
        android:text="Black"
        android:textAllCaps="false"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <Button
        android:id="@+id/medium_brown"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="276dp"
        android:layout_height="117dp"
        android:background="@color/medium_brown"
        android:text="Medium Brown"
        android:textAllCaps="false"
        app:backgroundTint="@color/medium_brown"
        app:layout_constraintBottom_toTopOf="@+id/dark_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>